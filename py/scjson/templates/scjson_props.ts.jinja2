{#
    scjson_props.ts.jinja2  : Template for creating props from an interface map. 
#}
{%- extends "base.ts.jinja2" -%}
{% block file_header %}
/**
 * {{file_name}} : {{file_description}}
 *
 * Part of the scjson project.
