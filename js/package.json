{
  "name": "scjson",
  "version": "0.3.0",
  "description": "A JSON-based serialization of SCXML (State Chart XML) for modern tooling, interoperability, and education.",
  "keywords": [
    "scjson",
    "scxml",
    "state-machine",
    "conversion",
    "json",
    "cli",
    "xml"
  ],
  "homepage": "https://github.com/SoftOboros/scjson/tree/main/js",
  "bugs": {
    "url": "https://github.com/SoftOboros/scjson/issues"
  },
  "license": "BSD-1-Clause",
  "author": "Softoboros Technology Inc. <ira@softoboros.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SoftOboros/scjson.git"
  },
  "bin": {
    "scjson": "bin/scjson.js"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "index.js",
  "type": "commonjs",
  "exports": {
    ".": "./index.js",
    "./props": "./scjsonProps.ts",
    "./browser": {
      "import": "./browser.mjs",
      "require": "./browser.cjs"
    },
    "./converters": "./converters.js"
  },
  "typesVersions": {
    "*": {
      "browser": [
        "/types/scjson-browser.d.ts"
      ],
      "props": [
        "/types/scjsonProps.d.ts"
      ]

    }
  },
  "types": "types/*",
  "files": [
    "bin/",
    "index.js",
    "browser.mjs",
    "browser.cjs",
    "converters.js",
    "scjsonProps.ts",
    "types/scjson-browser.d.ts",
    "types/scjsonProps.d.ts",
    "tests/",
    "scjson.schema.json",
    "README.md",
    "LEGAL.md",
    "LICENSE"
  ],
  "module": "./browser.mjs",
  "browser": "./browser.mjs",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "commander": "^14.0.0",
    "eslint": "^9.31.0",
    "fast-xml-parser": "^5.2.5"
  },
  "devDependencies": {
    "jest": "^30.0.4",
    "typescript": "^5.8.3"
  }
}
